<Program>
	<FuncDef type="int">
		<Identifier>factorial</Identifier>
		<Parameter type="int">n</Parameter>
		<Block>
			<If>
				<Condition>
					<BinExprNode Op="==">
						<Identifier>n</Identifier>
						<IntConst>1</IntConst>
					</BinExprNode>
				</Condition>
				<IfBlock>
					<Block>
						<Return>
							<IntConst>1</IntConst>
						</Return>
					</Block>
				</IfBlock>
				<ElseBlock>
					<Block>
						<Return>
							<BinExprNode Op="*">
								<Identifier>n</Identifier>
								<FuncCall>
									<Identifier>factorial</Identifier>
									<Arg>
										<BinExprNode Op="-">
											<Identifier>n</Identifier>
											<IntConst>1</IntConst>
										</BinExprNode>
									</Arg>
								</FuncCall>
							</BinExprNode>
						</Return>
					</Block>
				</ElseBlock>
			</If>
		</Block>
	</FuncDef>
	<Print>
		<FuncCall>
			<Identifier>factorial</Identifier>
			<Arg>
				<IntConst>10</IntConst>
			</Arg>
		</FuncCall>
	</Print>
</Program>
